{
  "type": "object",
  "required": ["name", "targetPort", "image", "command"],
  "properties": {
    "name": {
      "type": "string"
    },
    "namespace": {
      "type": "string",
      "default": "default"
    },
    "image": {
      "type": "string"
    },
    "command": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "env": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "serviceType": {
      "type": "string",
      "default": "LoadBalancer",
      "enum": ["LoadBalancer", "NodePort", "ClusterIP"]
    },
    "servicePort": {
      "type": "number",
      "default": 80
    },
    "targetPort": {
      "type": "number"
    },
    "replicas": {
      "type": "number",
      "default": 1
    }
  }
}
